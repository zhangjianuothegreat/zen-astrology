{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    },
    {
      "src": "templates/**",
      "use": "@vercel/static"
    },
    {
      "src": "static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(index.html)?",
      "dest": "/app.py"
    },
    {
      "src": "/get-cities",
      "dest": "/app.py"
    },
    {
      "src": "/generate-chart",
      "dest": "/app.py"
    }
  ]
}